<% if(!data) { %>
  <div class="">
    <p><%= message %></p>
  </div>
<% } else { %>

  <div class="data-display">
    <form class="" action="" method="post" id="sort-form">
      <label for="sort">Sort By :</label>
      <select class="data-sort" name="sort" id="data-sort" >
        <option value="default" id="default">Default</option>
        <option value="platform-name" id="platform-name">Platform Name</option>
        <option value="username" id="username">Username</option>
        <option value="recent" id="recent">Most Recent</option>
        <option value="oldest" id="oldest">Oldest</option>
      </select>
    </form>
    <% data.forEach( account => { %>
      <div class="row-div" id=<%= account._id%>>
        <div class="data-div">
          <h4> <b><u>Platform Name :</u></b> <%= account.platform_name %></h4>
          <p><b><u>Username :</u></b> <%= account.username %></p>
          <p class="password" hidden><b><u>Password :</u></b> <%= account.encrypted_password%></p>
          <p><b><u>Notes :</u></b> <%= account.notes %></p>
          <p><b><u>Upload Date :</u></b> <%= account.upload_date %></p>
        </div>
        <div class="btn-div" >
          <button type="button" class="toggle-btn" title="toggle" id=<%= account._id %>>👁️</button>
          <button class="copy-btn" type="button" name="button" data-toggle="tooltip" data-placement="top" title="Copy" id=<%= account.encrypted_password%>> 📄</button>
          <button class= "delete-btn" data-toggle="tooltip" data-placement="top" title="Delete" id=<%= account._id %> type="" name="button"> 🗑️</button>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>

<script src="/javascripts/data-display.js" charset="utf-8"></script>

<script type="text/javascript">
  <% if(sort_type){ %>
    let sort_type = '<%= sort_type %>';
    $(`#${sort_type}`).prop('selected', true);
  <% } %>
</script>
